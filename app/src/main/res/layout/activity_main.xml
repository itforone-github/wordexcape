<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="main"
            type="com.vocaescape.vocaescape.MainActivity" />
    </data>

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:weightSum="1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/menu_bt"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginLeft="10dp"
                    android:onClick="move_event"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_cate" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:scaleType="fitXY"
                    android:src="@drawable/logo" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/mywordBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:onClick="move_event"
                        app:srcCompat="@drawable/baseline_add_black_48" />

                    <ImageView
                        android:id="@+id/search_bt"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:onClick="move_event"
                        android:src="@drawable/search_icon" />
                    <!--            <ImageButton-->
                    <!--                android:id="@+id/setting_bt"-->
                    <!--                android:layout_width="30dp"-->
                    <!--                android:layout_height="30dp"-->
                    <!--                android:background="@null"-->
                    <!--                android:scaleType="fitStart"-->
                    <!--                android:onClick="move_event"-->
                    <!--                android:src="@drawable/settings_icon" />-->
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <com.google.android.ads.nativetemplates.TemplateView
            android:id="@+id/adView_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.44"

            android:background="#fafafa"
            app:gnt_template_type="@layout/gnt_medium_template_view" />


        <!--    <LinearLayout-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="0dp"-->
        <!--        android:layout_weight="0.02"-->
        <!--        android:background="#fff"-->
        <!--        />-->

        <!--    <LinearLayout-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="0dp"-->
        <!--        android:layout_weight="0.02"-->
        <!--        android:background="#fff"-->
        <!--        />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.28"
            android:background="#fafafa"
            android:orientation="vertical"
            android:weightSum="1">

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.14"
                android:background="#fafafa"
                tools:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.41"
                android:orientation="horizontal"
                android:weightSum="1">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.056" />

                <Button
                    android:id="@+id/bt_word1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.18"

                    android:background="@drawable/micon01"
                    android:onClick="move_event" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.056" />

                <Button
                    android:id="@+id/bt_word2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.18"
                    android:background="@drawable/micon02"
                    android:onClick="move_event" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.056" />

                <Button
                    android:id="@+id/bt_word3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.18"

                    android:background="@drawable/micon03"
                    android:onClick="move_event" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.056" />

                <Button
                    android:id="@+id/bt_word4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.18"

                    android:background="@drawable/micon04"
                    android:onClick="move_event" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.056" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".06" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.39"
                android:orientation="horizontal"
                android:weightSum="1">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.056" />

                <Button
                    android:id="@+id/bt_word5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.18"
                    android:background="@drawable/micon05"
                    android:onClick="move_event" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.056" />

                <Button
                    android:id="@+id/bt_word6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.18"

                    android:background="@drawable/micon06"
                    android:onClick="move_event"
                    android:textSize="18dp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.056" />

                <Button
                    android:id="@+id/bt_word7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.18"

                    android:background="@drawable/micon07"
                    android:onClick="move_event"
                    android:textSize="17dp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.056" />

                <Button
                    android:id="@+id/bt_word8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.18"

                    android:background="@drawable/micon08"
                    android:onClick="move_event"
                    android:textSize="17dp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.056" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                tools:visibility="visible" />
        </LinearLayout>

        <!-- ads:adUnitId는 반드시 string/banner로 해야 릴리즈 버전에서 보여줌 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.04"
            android:background="#fafafa"
            android:orientation="horizontal"></LinearLayout>

        <com.google.android.ads.nativetemplates.TemplateView
            android:id="@+id/adView_banner"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.14"
            app:gnt_template_type="@layout/gnt_small_template_view" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.03"
            android:background="#ffffff"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:text="구글 광고"
                    android:textColor="#fff"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="(Ad Mob by Google)"
                    android:textColor="#fff"
                    android:textSize="12dp" />
            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</layout>